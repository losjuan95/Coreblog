@using PagedList;
@using PagedList.Mvc;

@model IPagedList<coreblog.Models.BlogPost>

<link href="~/Content/PagedList.css" rel="stylesheet" />

<!-- Hero Section-->
<section style="background: url(../../img/coffee-laptop-background.jpg); background-size: cover; background-position: center center" class="hero">
    <div class="container">
        <div class="row">
            <div class="col-lg-7">
                <h1>Core Blog</h1>@Html.ActionLink("Discover More","BlogPosts","Home", null, new{ @class="hero-link"})
            </div>
        </div><a href=".intro" class="continue link-scroll"><i class="fa fa-long-arrow-down"></i> Scroll Down</a>
    </div>
</section>
<!-- Intro Section-->
<section class="intro">
    <div class="container">
       
        <div class="row">
            <div class="col-lg-8">
                <h2 class="h3">Everything Lost can be found except for Time wasted</h2>
                <p class="text-big">Time is a valuable thing. A gift and a curse. Gift in a sense that we are given this blessing day by day and a curse that in some moments we do not have enough of it. In certain instances we have to step away and look at all the times we did not use our time as efficiently as we would have liked to.</p>
            </div>
        </div>
    </div>
</section>
<section class="featured-posts no-padding-top">

    <div class="container">


        @{ var loop = 0;}
        @foreach (var post in Model.OrderByDescending(b => b.Created))
        {
            if (loop % 2 == 0)
            {
                <!-- Post-->
                <div class="row d-flex align-items-stretch">
                    <div class="text col-lg-7">
                        <div class="text-inner d-flex align-items-center">
                            <div class="content">
                                <header class="post-header">
                                    <div class="category">

                                    </div>
                                    <a href=@Url.Action("Details","BlogPosts", new { slug = @post.Slug})>
                                        <h2 class="h4">@post.Title</h2>
                                    </a>
                                </header>
                                <p>@post.Abstract</p>
                                <footer class="post-footer d-flex align-items-center">
                                    <a href="#" class="author d-flex align-items-center flex-wrap">
                                        <div class="avatar"><img src="~/img/avatar-1.jpg" alt="..." class="img-fluid"></div>
                                        <div class="title"><span>Juan Carlos Corea</span></div>
                                    </a>
                                    <div class="date"><i class="icon-clock"></i> @post.Created.ToString("MM/dd/yyyy")</div>
                                    <div class="comments"><i class="icon-comment"></i>@post.Comments.Count() </div>
                                </footer>
                            </div>
                        </div>
                    </div>
                    <div class="image col-lg-5"><img src=@post.MediaURL alt="..."></div>
                </div>
            }
            else
            {
                <br />
                <!-- Post        -->
                <div class="row d-flex align-items-stretch">
                    <div class="image col-lg-5"><img src=@post.MediaURL alt="..."></div>
                    <div class="text col-lg-7">
                        <div class="text-inner d-flex align-items-center">
                            <div class="content">
                                <header class="post-header">
                                    <div class="category">

                                    </div>
                                    <a href=@Url.Action("Details","BlogPosts", new { slug = @post.Slug})>
                                        <h2 class="h4">@post.Title</h2>
                                    </a>
                                </header>
                                <p>@post.Abstract</p>
                                <footer class="post-footer d-flex align-items-center">
                                    <a href="#" class="author d-flex align-items-center flex-wrap">
                                        <div class="avatar"><img src="~/img/avatar-1.jpg" alt="..." class="img-fluid"></div>
                                        <div class="title"><span>Juan Carlos Corea</span></div>
                                    </a>
                                    <div class="date"><i class="icon-clock"></i>@post.Created.ToString("MM/dd/yyyy")</div>
                                    <div class="comments"><i class="icon-comment"></i>@post.Comments.Count()</div>
                                </footer>
                            </div>
                        </div>
                    </div>
                </div>
                <br />
            }
            loop++;
        }

    </div>
    <div class="container">
        <nav aria-label="Page navigation example">
            <ul class="pagination pagination-template d-flex justify-content-lg-between">

                <li class="page-item page-link">

                    Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page, searchStr = ViewBag.Search }))
                </li>

            </ul>

        </nav>

    </div>
    

   
</section>
<!-- Divider Section-->
<section style="
        background-image: url('../../img/blog baackground.jpg');
        background-size: cover;
        background-position: center bottom" class="divider">
    <div class="container">
        <div class="row">
            <div class="col-md-7">
