<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>A Corean Blog</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="robots" content="all,follow">
    <!-- Bootstrap CSS-->
    @*<link rel="stylesheet" href="vendor/bootstrap/css/bootstrap.min.css">*@
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <!-- Font Awesome CSS-->
    @*<link rel="stylesheet" href="vendor/font-awesome/css/font-awesome.min.css">*@
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
    <!-- Custom icon font-->
    @*<link rel="stylesheet" href="css/fontastic.css">*@
    <link href="~/Content/fontastic.css" rel="stylesheet" />
    <!-- Google fonts - Open Sans-->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,700">

    <!-- Fancybox-->
    @*<link rel="stylesheet" href="vendor/@fancyapps/fancybox/jquery.fancybox.min.css">*@
    <link href="~/Content/jquery.fancybox.min.css" rel="stylesheet" />
    <!-- theme stylesheet-->
    @*<link rel="stylesheet" href="css/style.default.css" id="theme-stylesheet">*@
    <link href="~/Content/style.default.css" rel="stylesheet" />
    <!-- Custom stylesheet - for your changes-->
    @*<link rel="stylesheet" href="css/custom.css">*@
    <link href="~/Content/custom.css" rel="stylesheet" />
    <!-- Favicon-->
    <link rel="shortcut icon" href="~/img/core icon.jpg" />

    @*Datatables*@
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/dt/dt-1.10.18/datatables.min.css" />

    <!-- Tweaks for older IEs-->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script><![endif]-->
</head>
<body>
    <header class="header">
        <nav class="navbar navbar-expand-lg">
            <div class="search-area">
                <div class="search-area-inner d-flex align-items-center justify-content-center">
                    <div class="close-btn"><i class="icon-close"></i></div>
                    <div class="row d-flex justify-content-center">
                        <div class="col-md-8">


                            @using (Html.BeginForm("Index", "Home", FormMethod.Get, new { @class = "form" }))
                            {
                                <div class="form-group">
                                    <input type="search" name="searchStr" id="search" placeholder="Search For...">
                                    <button type="submit" class="submit"><i class="icon-search-1"></i></button>
                                </div>

                            }



                        </div>
                    </div>
                </div>
            </div>
            <div class="container">
                <!-- Navbar Brand -->
                <div class="navbar-header d-flex align-items-center justify-content-between">
                    <!-- Navbar Brand -->@Html.ActionLink("Juan Carlos Corea", "Index", "Home", null, new { @class = "nav-brand" })
                    <!-- Toggle Button-->
                    <button type="button" data-toggle="collapse" data-target="#navbarcollapse" aria-controls="navbarcollapse" aria-expanded="false" aria-label="Toggle navigation" class="navbar-toggler"><span></span><span></span><span></span></button>
                </div>
                <!-- Navbar Menu -->
                <div id="navbarcollapse" class="collapse navbar-collapse">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item">
                            @Html.ActionLink("Home", "Index", "Home", null, new { @class = "nav-link" })
                        </li>

                        <li class="nav-item">
                            @Html.ActionLink("Create", "Create", "BlogPosts", null, new { @class = "nav-link" })
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Contact", "Contact", "Home", null, new { @class = "nav-link" })
                        </li>
                        <li>
                            @Html.ActionLink("BlogPosts", "BlogPosts", "Home", null, new { @class = "nav-link" })
                        </li>
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                @Html.ActionLink("Index", "Index", "BlogPosts", null, new { @class = "nav-link" })
                            </li>

                        }
                        <li>
                            @Html.Partial("_LoginPartial")
                        </li>



                    </ul>
                    <div class="navbar-text">
                        <a href="#" class="search-btn">
                            <i class="icon-search-1"></i>
                        </a>
                    </div>

                </div>
            </div>
        </nav>
    </header>

    @RenderBody()

    <!-- Page Footer-->
    <footer class="main-footer">
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <div class="logo">
                        <h6 class="text-white">Juan Carlos Corea Blog</h6>
                    </div>
                    <div class="contact-details">
                        <p></p>
                        <p>Phone: (704)-593-9125</p>
                        <p>Email: <a href="mailto:juancarloscorea@gmail.com">juancarloscorea95@gmail.com</a></p>
                        <ul class="social-menu">
                            <li class="list-inline-item"><a target="blank" href="https://www.linkedin.com/in/juan-carlos-corea-909992171/"><i class="fa fa-linkedin"></i></a></li>
                            <li class="list-inline-item"><a target="blank" href="https://github.com/losjuan95"><i class="fa fa-github"></i></a></li>
                        </ul>
                    </div>
                </div>

            </div>
        </div>
        <div class="copyrights">
            <div class="container">
                <div class="row">
                    <div class="col-md-6">
                        <p>&copy; 2019 all rights may be reserved</p>
                    </div>
                    <div class="col-md-6 text-right">

                    </div>
                </div>
            </div>
        </div>
    </footer>
    <!-- JavaScript files-->
    @* <script src="vendor/jquery/jquery.min.js"></script>*@
    <script src="~/Scripts/jquery.min.js"></script>
    @*<script src="vendor/popper.js/umd/popper.min.js"></script>*@
    <script src="~/Scripts/tinymce/popper.min.js"></script>
    @*<script src="vendor/bootstrap/js/bootstrap.min.js"></script>*@
    <script src="~/Scripts/bootstrap.min.js"></script>
    @*<script src="vendor/jquery.cookie/jquery.cookie.js"></script>*@
    <script src="~/Scripts/jquery.cookie.js"></script>
    @*<script src="vendor/@fancyapps/fancybox/jquery.fancybox.min.js"></script>*@
    <script src="~/Scripts/jquery.fancybox.min.js"></script>
    @*<script src="js/front.js"></script>*@
    <script src="~/Scripts/front.js"></script>
    @*datatables*@
    <script type="text/javascript" src="https://cdn.datatables.net/v/dt/dt-1.10.18/datatables.min.js"></script>

    <script>
        $(document).ready(function () {
            $('.jq-data').DataTable();
        });
    </script>
    



    @RenderSection("scripts", false)
</body>
</html>